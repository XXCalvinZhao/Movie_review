<%= simple_form_for @group do |f| %>

<div class="form-group">
  <%= f.input :title, label: "movie", input_html: { class: "form-control"} %>
  <%= f.input :description, label: "review", input_html: { class: "form-control"} %>
</div>

<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..."} %>
<% end %>
